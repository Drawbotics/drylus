{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2019",
    "sourceMap": false,
    "outDir": "./dist",
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "./app/**/*.tsx",
    "./app/**/*.ts"
  ]
}